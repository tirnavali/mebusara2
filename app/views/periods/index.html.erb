<p id="notice"><%= notice %></p>

<h1>Yasama Dönemleri</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Dönem adı</th>
      <th scope="col">Başlama Tarihi</th>
      <th scope="col">Bitiş Tarihi</th>
      <th scope="col" colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @periods.each do |period| %>
      <tr>
        <td><%= period.name %></td>
        <td><%= period.startdate %></td>
        <td><%= period.enddate %></td>
        <td><%= link_to 'Ayrıntılar', period %></td>
        <td><%= link_to 'Düzenle', edit_period_path(period) %></td>
        <td><%= link_to 'Sil', period, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Yeni Dönem Ekle', new_period_path %>
