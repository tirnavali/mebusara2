<!DOCTYPE html>
<html>
  <head>
    <title>Mebusara</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <nav class="navbar navbar-expand-md navbar-light bg-light" style="background-color: orange;">
    <div class="container collapse navbar-collapse bg-light">
      <ul class="navbar-nav nav-pills">
        <li class="nav-item">
          <%= link_to "Anasayfa", :root, :class => "nav-link" %>
        </li> 
          <%= link_to "Vekiller", :mps,  :class => "nav-link" %>
          <%= link_to "Partiler", :parties, :class => "nav-link" %>
          <%= link_to "Yasama Dönemleri", :periods,  :class => "nav-link" %>
          <%= link_to "Proje Hakkında", :about_index,  :class => "nav-link" %> 
          <a href="#" class="nav-link">Sorular</a>
      </ul>
        
      <% if current_user %>
      <div class=" nav-link float-right">
      
     
        <%=current_user.email.split('@').first %>
      
     
        <%= link_to "Çıkış", log_out_path, class: "btn btn-outline-danger" %>
      
        <% else %>
      
        <%# <%= link_to "Kaydol", sign_up_path, class: "btn btn-outline-success " %> 
     
        
        <%# <%= link_to "Giriş Yap", log_in_path, class: "btn btn-outline-primary " %> 
      </div>
      <% end %>     
    </div>
  </nav>
  <body class="">
    <% flash.each  do |name, msg| %>
      <%= content_tag :div, msg, :id => "flash_#{name}" %>
    <% end %>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
