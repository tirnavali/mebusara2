<h1>Vekiller</h1>




<table border="1">
  <thead>
    <tr>
      <th>Ad</th>
      <th>İkinci Ad</th>
      <th>Soyad</th>
      <th>Cinsiyet</th>
      <th>Doğum Tarihi</th>
      <th>Ölüm Tarihi</th>
      <th>Özgeçmiş</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mps.each do |mp| %>
      <tr>
        <td><%= mp.name %></td>
        <td><%= mp.name2 %></td>
        <td><%= mp.surname %></td>
        <td><%= mp.gender %></td>
        <td><%= mp.birthdate %></td>
        <td><%= mp.deaddate %></td>
        <td><%= mp.detail %></td>
        <td><%= link_to 'Show', mp %></td>
        <td><%= link_to 'Edit', edit_mp_path(mp) %></td>
        <td><%= link_to 'Destroy', mp, method: :delete, data: { confirm: 'Emin misiniz?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

