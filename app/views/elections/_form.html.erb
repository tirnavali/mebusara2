<%= form_with model: @election do |form|%>

    <div class="form-row">
    
    <div class="field col-md-4">
      <%= form.label :period, "Yasama Yılı", class: "form-label" %>    
      <%= form.collection_select :period_id, @periods, :id, :name,  {}, {multiple: false, :class => "form-control"}%>
    </div>

    <div class="field col-md-4">
      <%= form.label :party, "Partisi" %>  
      <%= form.collection_select :party_id, @parties, :id, :name,  {}, {multiple: false, :class => "form-control"}%>
    </div>

    <div class="field col-md-4">    
      <%= form.label :mp, "Vekil" %>    
      <%= form.collection_select :mp_id, @mps, :id, :full_name, {}, {multiple: false, class: "form-control"} %>
    </div>

    <div class="field col-md-4 ">
      <%= form.submit :class => "btn btn-primary" %>
    </div>
    
    </div>


<% end %>